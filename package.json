{
  "name": "mining-inventory-demo",
  "version": "0.1.0",
  "description": "Electron demo: inventory app (3 locations, 150 items, categories, analytics)",
  "author": "Juggernaut Industries Limited",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "seed": "node seed.js",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "@electron/rebuild": "^3.7.2",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.juggernaut.inventory",
    "productName": "JuggernautInventory",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": "default"
    },
    "win": {
      "icon": "assets/icon.ico"
    }
  }
}
